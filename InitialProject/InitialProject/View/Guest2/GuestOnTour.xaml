<Window x:Class="TravelAgency.View.Guest2.GuestOnTour"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.View.Guest2"
        mc:Ignorable="d"
        Title="GuestOnTour" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataPanel" HorizontalAlignment="Center" Height="198" Margin="0,82,0,0" VerticalAlignment="Top" Width="458" Loaded="LoadData"/>
        <Label Content="Select a tour to start." HorizontalAlignment="Center" Height="28" Margin="0,36,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Confirm arrival" HorizontalAlignment="Left" Height="29" Margin="495,333,0,0" VerticalAlignment="Top" Click="ConfirmArrival" Width="96" RenderTransformOrigin="1.708,0.439"/>
        <Button Content="Exit" HorizontalAlignment="Left" Height="27" Margin="687,367,0,0" VerticalAlignment="Top" Click="Exit" Width="61"/>
        <DataGrid x:Name="KeyPoints" Margin="171,304,364,44"/>
        <Button Content="Show Tour" HorizontalAlignment="Left" Height="26" Margin="651,234,0,0" VerticalAlignment="Top" Width="67" Click="Button_Click"/>

    </Grid>
</Window>
