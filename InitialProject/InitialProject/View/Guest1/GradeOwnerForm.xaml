<Window x:Class="TravelAgency.View.Guest1.GradeOwnerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency.View.Guest1"
        mc:Ignorable="d"
        Title="GradeOwnerForm" Height="597" Width="547">
    <Grid>
        <StackPanel Orientation ="Horizontal" Margin="36,146,347,409">
            <RadioButton x:Name="rbHotelOption1" Content="1" />
            <RadioButton x:Name="rbHotelOption2" Content="2" Margin="5,0,0,0" />
