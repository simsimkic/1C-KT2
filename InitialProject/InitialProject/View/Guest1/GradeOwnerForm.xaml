            <RadioButton x:Name="rbHotelOption4" Content="4" Margin="5,0,0,0" />
            <RadioButton x:Name="rbHotelOption5" Content="5" Margin="5,0,0,0" />
        </StackPanel>
        <StackPanel Orientation ="Horizontal" Margin="36,201,356,361">
            <RadioButton x:Name="rbOwnerOption1" Content="1" />
            <RadioButton x:Name="rbOwnerOption2" Content="2" Margin="5,0,0,0" />
            <RadioButton x:Name="rbOwnerOption3" Content="3" Margin="5,0,0,0" />
            <RadioButton x:Name="rbOwnerOption4" Content="4" Margin="5,0,0,0" />
            <RadioButton x:Name="rbOwnerOption5" Content="5" Margin="5,0,0,0" />
